<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_civ_photo"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/img_profile_user" />

    <RelativeLayout
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:id="@+id/nav_header_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/size_xLarge"
            android:drawableTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward"
            android:fontFamily="@font/open_sans_bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/size_large"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/open_sans_bold" />

            <TextView
                android:id="@+id/nav_header_mob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/balsamiq_sans_regular"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>